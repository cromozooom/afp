block config
	block var
		- var metaDescription 		= "default description"
		- var title 				= "default Title"
		- var keywords 				= "default keyword"
		- var bodyClass 			= "defaul index"
		- var myJs 					= false
		//- var addTyhis 				= true
		- var typePage 				= "page"
		- var assets 				= "../assets/"
		//- var relativeLink 			= ""


	block defaultVar
		- var brand 				= "Amazing Frameable Postcards"
		- var jQueryScript 			= true
		- var bootstrapScript 		= true
		- var ScrollMagic 			= false
		- var fb_share 				= false
		- var analytics 			= false
		- var pinterest 			= false
		- var contactPage 			= "contact.php"
		- var author 				= "Nicu Razvan Gabriel - soloPx.com"
		- var copyRight 			= "Copyright (c) 2015 Amazing Frameable Postcards"
		- var fBpageLink 			= "https://www.facebook.com/frameable.postcards"
		- var instagramLink 		= "https://instagram.com/calinalefter/"
		- var thumblrLink 			= "http://calinalefter.tumblr.com/"
		- var pinterestLink 		= "https://it.pinterest.com/calinalefter/"
		- var twitterLink 			= "https://twitter.com/moondiary"



	//- local sau online
	//- var siteName 				= "http://calinalefter.com/"
	- var siteName 					= ""
	//- font google
	- var googleFonts01 			= "http://fonts.googleapis.com/css?family=Playfair+Display:400,400italic|Josefin+Sans|Voltaire"



doctype html
html(lang="en")
	head
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(name="description", content="#{metaDescription}")
		meta(name="author", content="#{author}")
		meta(name="keywords", content="#{keywords}")
		meta(name="copyright", content="#{copyRight}")
		meta(name="thumbnail" content="#{siteName}gallery/thumbnail/#{thumbnailShareLink}")
		//- FB share
		meta( property="fb:app_id" content="#{id}")
		meta( property="og:type" content="#{typePage}")
		meta( property="og:url" content="http://calinalefter.com/#{htmlName}")
		meta( property="og:title" content="#{title}")
		meta( property="og:image" content="#{siteName}gallery/thumbnail/#{thumbnailShareLink}")
		meta( property="og:description" content="#{metaDescription}")

		//- share
		if thumbnailShareLink
			link(rel="image_src" href="#{siteName}gallery/thumbnail/#{thumbnailShareLink}")
		link(rel="shortcut icon", href="#{assets}/ico/favicon.png")
		link(href="http://fonts.googleapis.com/css?family=Lora|Open+Sans+Condensed:300,700" rel="stylesheet" type="text/css")
		link(href="#{googleFonts01}" rel="stylesheet" type="text/css")
		title #{title}

		//-Bootstrap core CSS
		//- link(href="bower_components/bootstrap-sass/assets/stylesheets/_bootstrap.css", rel="stylesheet")
		//- my style
		link(href="#{assets}css/style.css", rel="stylesheet")
		link(href="#{assets}css/smartmagic.css", rel="stylesheet")
		//-HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
		//-WARNING: Respond.js doesn"t work if you view the page via file://
		//-[if lt IE 9]
		//-script(src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js")
		//-script(src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js")
		//-[endif]

		//- Bootstrap core JavaScript
		if jQueryScript
			script(src="#{assets}js/jquery.min.js")

		// fixedTop
		script(src="#{assets}js/fixedTop.js")
		// end fixedTop
	body(class="#{bodyClass}")
		if analytics
			//- analitycs
			include google.html
			//- end analitycs
		if fb_share
			include fb_SDK.html
		
		block menu
			nav.navbar.navbar-default(role="navigation")
				//- Brand and toggle get grouped for better mobile display
				.container
					.navbar-header
						button.navbar-toggle(type="button" data-toggle="collapse" data-target="#navbar-collapse-1")
							span.sr-only Toggle navigation
							span.icon-bar 
							span.icon-bar 
							span.icon-bar 
					a.navbar-brand(href="#{relativeLink}index.html")
						include ../assets/img/logo.svg

					//- Collect the nav links, forms, and other content for toggling
					#navbar-collapse-1.collapse.navbar-collapse
						ul.nav.navbar-nav.navbar-left
							li
								a(href="#{relativeLink}index.html") Home
							li
								a(href="#{etsyLinkStore}") Collection
						ul.nav.navbar-nav.navbar-right
							li
								a(href="#{relativeLink}biography-of-calina-lefter.html") Blog
							li
								a(href="#{relativeLink}contact.php") Contact
		block content


		block footer
			.container-fluid.footer
				br
				.container
					.row
						.col-xs-12.hidden-md.hidden-sm.hidden-lg.text-center
							h3 Newsletter
							p Promotions and more details about my activity
							hr
							a.btn_ghost.btn-lg_ghost.btn-brand_ghost(href="#{mailListLink}" title="Join my mailing list") Join my mailing list
						.col-sm-4.col-md-4.col-xs-12.text-center
							h3 I am social
							p
								| These are some places where you can find me.
								hr
							ul.social.list-inline
								li.text-center
									a.fb.text-hide(href="#{fBpageLink}")
										include ../assets/img/facebook.svg
										| Facebook page
								li.text-center
									a.instagram.text-hide(href="#{instagramLink}")
										include ../assets/img/instagram.svg
										| instagram
								li.text-center
									a.thumblr.text-hide(href="#{thumblrLink}")
										include ../assets/img/thumblr.svg
										|thumblr
								li.text-center
									a.pinterest.text-hide(href="#{pinterestLink}")
										include ../assets/img/pinterest.svg
										| pinterest
								li.text-center
									a.twitter.text-hide(href="#{twitterLink}")
										include ../assets/img/twitter.svg
										| twitter
						.col-sm-4.col-md-4.col-xs-12.text-center
							h3 Contact me
							p Don"t hesitate to get in touch with me
							hr
							p
								| mobile: 
								a(href="tel:348-555-07-61") +348 555 07 61
								br
								br
								//- |  &nbsp;&nbsp;|&nbsp;&nbsp;
								| or 
								a(href="#{contactPage}") via e-mail
						.col-sm-4.col-md-4.hidden-xs.text-center
							h3 Newsletter
							p Promotions and more details about my activity
							hr
							a.btn_ghost.btn-lg_ghost.btn-brand_ghost(href="#{mailListLink}") Join my mailing list
					.row
						hr
						p.text-center
							small #{copyRight}

		
		if bootstrapScript
			script(src="#{assets}js/bootstrap.min.js")
		if ScrollMagic
			script(src="#{assets}js/greensock-js/src/minified/TweenMax.min.js")
			script(src="#{assets}js/jquery.min.js")
			// should be replaced with minified version when development is finished
			script(src="#{assets}js/scrollmagic/minified/plugins/jquery.ScrollMagic.min.js")
			// should be removed when development is finished
			script(src="#{assets}js/scrollmagic/uncompressed/plugins/debug.addIndicators.js")
			script(src="#{assets}js/scrollmagic/scrollmagicScenne.js")



		//- isotope 1.5.25
		if isotopeScript
			script(src="#{assets}js/jquery.isotope.min.js")
			script(src="https://cdnjs.cloudflare.com/ajax/libs/picturefill/2.3.0/picturefill.min.js")
		//- my js
		//- if myJs
			script(src="#{assets}/js/my.js")
		if addTyhis
			//- Go to www.addthis.com/dashboard to customize your tools -->
			script(type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-4fbdebdb6ae62d57" async="async")
		if contactPageScript
			script(src="#{assets}js/validator.min.js")
		if pinterest
			script(type="text/javascript" async defer src="//assets.pinterest.com/js/pinit.js")
